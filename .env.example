# API Keys (REQUIRED)
OPENAI_API_KEY=sk-proj-your-key-here
KRAKEN_API_KEY=your-kraken-api-key
KRAKEN_API_SECRET=your-kraken-api-secret

# Trading Configuration
KRAKEN_BOT_PAIRS=BTC/USD,ETH/USD
KRAKEN_BOT_TIMEFRAME=15m
KRAKEN_BOT_CHECK_INTERVAL_MS=60000
KRAKEN_BOT_MAX_CONCURRENT_TRADES=2
KRAKEN_BOT_PAPER_TRADING=true

# Risk Management
KRAKEN_BOT_ACCOUNT_BALANCE_OVERRIDE=0
KRAKEN_BOT_RISK_PER_TRADE_PCT=0.05
KRAKEN_BOT_STOP_LOSS_PCT=0.05
KRAKEN_BOT_PROFIT_TARGET_PCT=0.10

# Pyramiding Configuration (Aggressive)
KRAKEN_BOT_PYRAMIDING_ENABLED=true
KRAKEN_BOT_PYRAMID_LEVELS=2
KRAKEN_BOT_PYRAMID_L1_TRIGGER_PCT=0.045
KRAKEN_BOT_PYRAMID_L2_TRIGGER_PCT=0.080
KRAKEN_BOT_PYRAMID_ADD_SIZE_PCT_L1=0.35
KRAKEN_BOT_PYRAMID_ADD_SIZE_PCT_L2=0.50
KRAKEN_BOT_PYRAMID_L1_CONFIDENCE_MIN=85
KRAKEN_BOT_PYRAMID_L2_CONFIDENCE_MIN=90
KRAKEN_BOT_PYRAMID_EROSION_CAP_CHOPPY=0.006
KRAKEN_BOT_PYRAMID_EROSION_CAP_TREND=0.008

# Drop Protection
KRAKEN_BOT_BTC_DUMP_THRESHOLD_1H=-0.015
KRAKEN_BOT_VOLUME_SPIKE_MAX=3.0
KRAKEN_BOT_SPREAD_WIDENING_PCT=0.005

# Momentum Failure Detection (zero-cost AI exit replacement)
KRAKEN_BOT_MOMENTUM_FAILURE_ENABLED=true
KRAKEN_BOT_MOMENTUM_FAILURE_MIN_PROFIT=0.02
KRAKEN_BOT_MOMENTUM_1H_FAILURE_THRESHOLD=-0.003
KRAKEN_BOT_MOMENTUM_4H_FAILURE_THRESHOLD=-0.005
KRAKEN_BOT_VOLUME_EXHAUSTION_THRESHOLD_1H=0.9
KRAKEN_BOT_VOLUME_EXHAUSTION_THRESHOLD_4H=1.0
KRAKEN_BOT_HTF_MOMENTUM_WEAKENING=0.005
KRAKEN_BOT_PRICE_NEAR_PEAK_THRESHOLD=0.98
KRAKEN_BOT_MOMENTUM_FAILURE_REQUIRED_SIGNALS=2

# AI Configuration
KRAKEN_BOT_AI_MODEL=gpt-4o-mini
KRAKEN_BOT_AI_MIN_CONFIDENCE=70
KRAKEN_BOT_AI_MAX_CALLS_PER_HOUR=300
KRAKEN_BOT_AI_CACHE_MINUTES=15

# Cost Analysis
KRAKEN_BOT_EXCHANGE_FEE_PCT=0.002
KRAKEN_BOT_SLIPPAGE_PCT=0.001
KRAKEN_BOT_MIN_PROFIT_MULTIPLIER=3.0
KRAKEN_BOT_MIN_RISK_REWARD_RATIO=2.0

# Logging
KRAKEN_BOT_LOG_LEVEL=info
KRAKEN_BOT_LOG_TO_FILE=true
KRAKEN_BOT_LOG_FILE_PATH=./logs/trading.log

# Environment
NODE_ENV=development
